<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imgWeatherForHour"/>

    <ImageView
        android:id="@+id/imgWeatherForHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvHour"
        app:layout_constraintBottom_toTopOf="@id/tvTempHigh"/>

    <TextView
        android:id="@+id/tvTempHigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivWeatherImage"
        app:layout_constraintBottom_toTopOf="@id/tvTempLow"/>

    <TextView
        android:id="@+id/tvTempLow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTempHigh"/>


</androidx.constraintlayout.widget.ConstraintLayout>